<form action="/recipes/<%=@recipe.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
Name:<input id="name" type="text" name="recipe[name]" value="<%= @recipe.name%>"><br>
Ingredients:<input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients%>"><br>
Cooking Time:<input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time%>"><br>
<input type="submit" value="Submit Changes">
</form>